[alias]
    pf = push --force-with-lease

[merge]
    tool = nvim
    conflictstyle = diff3

[mergetool "nvim"]
    cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[core]
    ; Set to 'true' on Windows
    autoclrf = input
    excludesFile = ~/.gitignore
    attributesFile = ~/.gitattributes

[init]
    defaultBranch = master

[pull]
    rebase = true

[push]
    autoSetupRemote = true